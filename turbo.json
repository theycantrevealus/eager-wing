{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".vite/**", ".nest/**"]
    },
    "client:dev": {
      "cache": false,
      "persistent": true
    },
    "server:start": {
      "cache": false,
      "persistent": true
    }
  }
}
