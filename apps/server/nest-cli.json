{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "tsconfig.json"
  },
  "projects": {
    "@gateway-core": {
      "type": "application",
      "root": "apps/@gateway-core",
      "entryFile": "main",
      "sourceRoot": "apps/@gateway-core/src",
      "compilerOptions": {
        "tsConfigPath": "apps/@gateway-core/tsconfig.app.json"
      }
    }
  }
}
